# ============================================================================
# VIGIL AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control
# ============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-secret-key-change-in-production

# ============================================================================
# SUPABASE - PostgreSQL Database & Vector Store
# Get these from https://app.supabase.com/project/YOUR_PROJECT/settings/api
# ============================================================================

# Master Database (Platform Administration & Authentication)
# Contains: clients, admins, users, sessions, data_sources, usage_metrics
SUPABASE_MASTER_URL=https://your-master-project.supabase.co
SUPABASE_MASTER_KEY=your-master-anon-key
SUPABASE_MASTER_SERVICE_KEY=your-master-service-role-key

# Client Database (Default/Development - each client has their own)
# Contains: risks, documents, suppliers, inventory, etc.
SUPABASE_URL=https://your-client-project.supabase.co
SUPABASE_KEY=your-client-anon-key
SUPABASE_SERVICE_KEY=your-client-service-role-key

# ============================================================================
# X.AI - Grok AI for Deep Reasoning & Agentic RAG
# Get from https://console.x.ai/
# ============================================================================
XAI_API_KEY=xai-your-xai-api-key
GROK_MODEL=grok-3

# ============================================================================
# EMAIL CONFIGURATION (Optional - for admin notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@vigilsecure.com

# ============================================================================
# GUNICORN CONFIGURATION (Production)
# ============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_LOG_LEVEL=info
GUNICORN_PRELOAD=False

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
VIGIL_DOMAIN=vigilsecure.com
VIGIL_MAX_FILE_SIZE=10485760
VIGIL_ALLOWED_ORIGINS=https://vigilsecure.com,https://www.vigilsecure.com

# ============================================================================
# CLOUD INTEGRATIONS (Optional)
# ============================================================================
# DROPBOX_ACCESS_TOKEN=your-dropbox-token
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
